% layout 'default';
% title 'Login';
<h1>Log In</h1>
<% if (my $message = flash 'message' ) { %>
    <b><%= $message %></b><br>
<% } %>
<%= form_for login => (method => 'post') => begin %>
    Name: <%= text_field 'name' %>
    <br>
    Password: <%= password_field 'pass' %>
    <br>
    <%= submit_button 'Login' %>
<% end %> 
<%= link_to signup => 'signup' %>
