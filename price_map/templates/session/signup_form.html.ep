% layout 'default';
% title 'Sign up';
<h1>Регистрация:</h1>

<%= form_for signup => (method => 'get') => begin %>
    <label>Логин(имя):</label><br><%= text_field 'name' %>
    <br>
    <lable>Пароль:</lable><br> <%= password_field 'pass' %>
    <br>
    <%= submit_button 'Зарегистрироваться' %>
<% end %>
 
